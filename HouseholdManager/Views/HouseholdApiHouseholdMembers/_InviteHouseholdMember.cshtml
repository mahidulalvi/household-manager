@model InviteHouseholdMemberBindingModel

@{
    ViewBag.Title = "_InviteHouseholdMember";
    Layout = null;
}

<h2>Invite Household Member</h2>

@if (ViewBag.HouseholdId != null)
{
    <form method="post" action="@Url.Action("_InviteHouseholdMember", "HouseholdApiHouseholdMembers", new { householdId = ViewBag.HouseholdId })">
        <div class="form-group">
            @Html.LabelFor(p => p.Email)
            @Html.TextBoxFor(p => p.Email)
        </div>

        <button>Invite</button>
    </form>
}